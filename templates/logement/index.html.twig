{% extends 'base.html.twig' %}

{% block title %}Logements{% endblock %}

{% block body %}
    <h1>Logements</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Type</th>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for logement in logements %}
            <tr>
                <td>{{ logement.type }}</td>
                <td>{{ logement.id }}</td>
                <td>
                    <a href="{{ path('app_logement_show', {'id': logement.id}) }}">Voir</a>

                    {% if is_granted('ROLE_ADMIN') %}

                        <a href="{{ path('app_logement_edit', {'id': logement.id}) }}">Modifier</a>
                    {% endif %}
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas d'enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}

        <a href="{{ path('app_logement_new') }}">Cr√©er un nouveau logement</a>

    {% endif %}

{% endblock %}
