{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}
    <h1>Catégorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Label</th>
                <td>{{ category.label }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_category_index') }}">Revenir à la liste</a>

    {% if is_granted('ROLE_ADMIN') %}

        <a href="{{ path('app_category_edit', {'id': category.id}) }}">Modifier</a>

        {{ include('category/_delete_form.html.twig') }}

    {% endif %}
    
{% endblock %}
